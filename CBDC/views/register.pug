doctype html
html(lang='en')
	head
		script(src='/js/materialize.min.js')
		script(src='/js/jquery-3.1.1.min.js')
		script(src='/js/bundle/bundle.js')
		title Hello world 2
	body
		nav
			include includes/navbar.pug
		.background-register
			.register-form
				.row
					form.col.s12(action='/register' method='post')
						.row
							.input-field.col.s12
								input#first_name(type='text' name='first_name' autocomplete='off' required)
								label(for='first_name') First Name
							.input-field.col.s12
								input#last_name(type='text' name='last_name' autocomplete='off' required)
								label(for='last_name') Last Name
							.input-field.col.s12
								input#email(type='email' name='email' autocomplete='off' required)
								label(for='email') Email
							.input-field.col.s12
								input#password(type='password' name='password' autocomplete='off' required secret)
								label(for='password') Password
							div
								button.waves-effect.waves-light.btn(type='submit')
									| Register
